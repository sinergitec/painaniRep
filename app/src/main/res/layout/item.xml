<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_margin="8dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:background="@drawable/bgcolor">

            <ImageView
                android:id="@+id/imageView"
                app:srcCompat="@android:drawable/ic_menu_mapmode"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="170dp"/>

            <TextView
                android:id="@+id/txPedidoF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView"
                android:hint="Pedido"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorText"/>

            <TextView
                android:id="@+id/txPzaTot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Cantidad"
                android:layout_below="@id/imageView"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="130dp"
                android:textSize="15sp"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorText"/>

            <Button
                android:id="@+id/bLlegaP"
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:text="ENTRA"
                android:textColor="@android:color/white"
                android:background="@drawable/btnllegap"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="200dp"
                android:onClick="LlegadaProv"/>

            <Button
                android:id="@+id/bSaleP"
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:text=" SALIR"
                android:background="@drawable/btnsalidap"
                android:textColor="@android:color/white"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="280dp"
                android:onClick="SalidaProv"/>

            <TextView
                android:id="@+id/txtNegocio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txPedidoF"
                android:hint="Negocio: "
                android:textSize="15sp"
                android:layout_marginLeft="16dp"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorText"/>

            <TextView
                android:id="@+id/txtDomProv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="DirecciÃ³n"
                android:layout_below="@id/txtNegocio"
                android:layout_marginLeft="16dp"
                android:textSize="15sp"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorText"/>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>




</LinearLayout>