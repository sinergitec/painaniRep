<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actividades.Home">


    /**Estado del titlani**/
    <TextView
        android:id="@+id/tvEstatusP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estatus:"
        android:textSize="15dp"
        android:textColorHint="@color/colorText"
        android:textColor="@color/colorText"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tvDescEst"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Estado"
        android:textSize="15dp"
        android:textColorHint="@color/colorText"
        android:textColor="@color/colorText"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:theme="@style/SwitchTheme"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="149dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="360dp"/>

    /**Datos de entrega cliente y domicilio**/
    <TextView
        android:id="@+id/tvEntregar"
        android:layout_below="@id/tvEstatusP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Entregar a:"
        android:textColorHint="@color/colorText"
        android:textColor="@color/colorText"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/tvNombreRecibe"
        android:layout_below="@id/tvEstatusP"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textColorHint="@color/colorText"
        android:textColor="@color/colorText"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp" />

    <TextView
        android:id="@+id/tvDomicilio"
        android:layout_below="@id/tvEntregar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entregar en:"
        android:textColorHint="@color/colorText"
        android:textColor="@color/colorText"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tvNombreDom"
        android:layout_below="@id/tvEntregar"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textColorHint="@color/colorText"
        android:textColor="@color/colorText"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="100dp" />

<!--
        /*lista de proveedores*/
        <androidx.cardview.widget.CardView
            android:layout_below="@id/tvDomicilio"
            android:id="@+id/cardv"
            android:foregroundGravity="center"
            android:layout_centerInParent="true"
            android:overScrollMode="never"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

        </androidx.cardview.widget.CardView>
-->

    <TableLayout
        android:id="@+id/tableLayout9"
        android:layout_below="@+id/tvNombreDom"
        android:background="@drawable/c"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="4dp">

            <ListView
                android:id="@+id/lvPedxProv"
                android:layout_width="455dp"
                android:layout_height="95dp"
                android:background="@drawable/a"
                android:listSelector="@drawable/b"
                android:state_activated="false"
                android:visibility="visible">
            </ListView>
        </TableRow>
    </TableLayout>



    /*detalle del pedido*/
    <TextView
        android:id="@+id/txtCom"
        android:layout_below="@id/tableLayout9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="21"
        android:text="Detalle"
        android:textAlignment="center"
        android:textColor="@color/colorText"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="10dp"/>

    <TableLayout
        android:id="@+id/tableLayout11"
        android:layout_below="@id/txtCom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/c">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="4dp">
            <ListView
                android:id="@+id/lvDetalle"
                android:layout_width="445dp"
                android:layout_height="264dp"
                android:listSelector="@drawable/b"
                android:state_activated="false">

            </ListView>
        </TableRow>

    </TableLayout>


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_below="@id/tvDomicilio"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:progressDrawable="@drawable/progress"
        android:visibility="invisible"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="380dp" />

    <Button
        android:id="@+id/btnFin"
        android:layout_below="@id/tableLayout11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/a"
        android:text="finalizar"
        android:textColor="@color/colorText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="200dp"
        android:visibility="visible"/>

    <Button
        android:id="@+id/btnEstatus"
        android:layout_below="@id/tableLayout11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Estatus"
        android:background="@drawable/etext"
        android:textColor="@color/colorText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="110dp"
        android:visibility="invisible"/>
    <Button
        android:id="@+id/btnSalir"
        android:layout_below="@id/tableLayout11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="salir"
        android:background="@drawable/etext"
        android:textColor="@color/colorText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnEstatus"
        app:layout_constraintHorizontal_bias="0.005"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="210dp"
        android:visibility="invisible"/>
    <ImageButton
        android:id="@+id/ibtnBuscar"
        android:layout_below="@id/tableLayout11"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/a"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnEstatus"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toEndOf="@+id/btnSalir"
        app:srcCompat="@android:drawable/ic_menu_search"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="210dp"/>
    <Button
        android:id="@+id/btnLlegoP"
        android:layout_below="@id/tableLayout11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/etext"
        android:textColor="@color/colorText"
        android:text="Llega Prov"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="310dp"
        tools:layout_editor_absoluteX="239dp"
        android:visibility="invisible"/>
    <Button
        android:id="@+id/btnSalidaP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/etext"
        android:textColor="@color/colorText"
        android:layout_below="@id/tableLayout11"
        android:text="SALIDA PROV"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="310dp"
        tools:layout_editor_absoluteX="239dp"
        android:visibility="invisible"/>






    /**Menu**/
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="#000000"
        app:itemIconTint="@android:color/white"
        app:itemTextColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@xml/menu" />
</RelativeLayout>